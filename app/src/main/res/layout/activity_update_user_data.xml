<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".LogInActivity"
    >

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fill The Fields That You Want To Update"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="21sp"
    />
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/updateUserFirstName"
            android:inputType="textEmailAddress"
            android:hint="Your First Name"
            android:textColorHint="@color/grey"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:textSize="15sp"
            />

        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/updateUserLastName"
            android:inputType="textEmailAddress"
            android:hint="Your Last Name"
            android:textColorHint="@color/grey"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:textSize="15sp"
            />

    </LinearLayout>
    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/updateUserMobile"
        android:inputType="phone"
        android:hint="Your Mobile Number"
        android:textColorHint="@color/grey"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        />

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/updateMonitorFirstName"
            android:inputType="text"
            android:hint="Monitor's First Name"
            android:textColorHint="@color/grey"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:textSize="15sp"
            />

        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/updateMonitorLastName"
            android:inputType="text"
            android:hint="Monitor's Last Name"
            android:textColorHint="@color/grey"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:textSize="15sp"
            />
    </LinearLayout>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/updateMonitorMobile"
        android:inputType="phone"
        android:hint="Monitor's Mobile Number "
        android:textColorHint="@color/grey"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        />

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:gravity="center"
        android:id="@+id/updateButton"
        />
    <ProgressBar
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updateProgressBar"
        />

</LinearLayout>